<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="groupek.lsinf1225_projet">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/heart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" />
        <activity android:name=".ProfilActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".AmisActivity" />
        <activity android:name=".FavorisActivity" />
        <activity android:name=".ProfilAmiFavActivity"/>
        <activity android:name=".MeetActivity" />
        <activity android:name=".BrowserActivity" />
        <activity android:name=".MessagerieActivity" />
        <activity android:name=".ChatActivity" />
    </application>

</manifest>